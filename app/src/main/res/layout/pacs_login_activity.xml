<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:background="@color/C_F6F6F6"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textColor="@color/C_222222"
            android:textSize="@dimen/font_18"
            android:text="影像共享系统登录确认"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="center"
            android:id="@+id/btLogin"
            android:layout_width="@dimen/lay_200"
            android:layout_height="@dimen/lay_50"
            android:layout_marginTop="100dp"
            android:background="@drawable/round_border_bg_blue"
            android:text="@string/login"
            android:textColor="@color/C_494949"
            android:textSize="@dimen/lay_16" />
        <TextView
            android:gravity="center"
            android:id="@+id/btCancel"
            android:layout_width="@dimen/lay_200"
            android:layout_height="53dp"
            android:layout_marginTop="20dp"
            android:text="取消登录"
            android:textColor="@color/C_333333"
            android:textSize="@dimen/lay_16" />


    </LinearLayout>
</layout>