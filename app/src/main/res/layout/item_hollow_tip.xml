<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="item"
            type="String"/>
    </data>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:paddingLeft="@dimen/lay_10"
        android:paddingRight="@dimen/lay_10"
        android:paddingTop="@dimen/lay_3"
        android:paddingBottom="@dimen/lay_3"
        android:text="@{item}"
        android:layout_marginLeft="@dimen/lay_10"
        android:layout_marginRight="@dimen/lay_10"
        android:background="@drawable/round_hollow_bg"
        android:textColor="@color/text_blue_white_selector"
        android:textSize="@dimen/font_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
</layout>