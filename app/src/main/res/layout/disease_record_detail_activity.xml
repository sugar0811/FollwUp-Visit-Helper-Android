                            <!--android:src="@drawable/default_pic" />-->

                        <!--<ImageView-->
                            <!--android:layout_width="0dp"-->
                            <!--android:layout_height="@dimen/lay_60"-->
                            <!--android:layout_weight="1"-->
                            <!--android:paddingRight="@dimen/lay_5"-->
                            <!--android:scaleType="fitXY"-->
                            <!--android:src="@drawable/default_pic" />-->

                        <!--<ImageView-->
                            <!--android:layout_width="0dp"-->
                            <!--android:layout_height="@dimen/lay_60"-->
                            <!--android:layout_weight="1"-->
                            <!--android:paddingLeft="@dimen/lay_5"-->
                            <!--android:scaleType="fitXY"-->
                            <!--android:src="@drawable/default_pic" />-->

                    </LinearLayout>


                </LinearLayout>
                </LinearLayout>
            <LinearLayout
                android:layout_margin="@dimen/lay_10"
                android:padding="@dimen/lay_5"
                android:background="@drawable/card_selector"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingLeft="@dimen/lay_10"
                    android:gravity="left|center"
                    android:layout_height="@dimen/lay_30"
                    android:layout_width="match_parent"
                    android:text="辅助检查"
                    />
                <View
                    android:background="@drawable/dash_line_mini"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/lay_1"/>
                <FrameLayout
                    android:padding="@dimen/lay_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="血常规+超敏CRP（快速病）（病房）"
                            android:textColor="@color/C_222222"
                            android:textSize="@dimen/font_15" />

                        <TextView
                            android:layout_marginTop="@dimen/lay_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="中性粒细胞(%):73.3%," />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="红细胞计数3.75*10E12/L" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="血红蛋白: 120/L" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="C反应蛋白： 28.9mg/L" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="2018/10/31"
                        android:textColor="@color/C_222222"
                        android:textSize="@dimen/lay_15" />

                </FrameLayout>

                <FrameLayout
                    android:padding="@dimen/lay_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="胸部CT"
                            android:textColor="@color/C_222222"
                            android:textSize="@dimen/font_15" />

                        <TextView
                            android:layout_marginTop="@dimen/lay_5"
                            android:layout_width="wrap_content"
