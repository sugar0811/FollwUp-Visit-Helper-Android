<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="item"
            type="mobile.fuvh.cn.followupvisithelper.voice.bean.DrawerMenuBean"/>
    </data>
<LinearLayout
    android:paddingTop="@dimen/lay_10"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/selector_white_item_clickable"
    android:paddingLeft="@dimen/lay_26"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        app:picRes="@{item.menuIcon}"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="@dimen/lay_20"
        android:text="@{item.menuName}"
        android:textColor="@color/C_333333"
        android:textSize="@dimen/font_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_marginTop="@dimen/lay_10"
        android:background="@color/C_EBEBEB"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
</LinearLayout>
</layout>